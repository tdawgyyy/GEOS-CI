<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.geoquestkidsexplorer.controllers.QuizController"
      spacing="16" alignment="TOP_CENTER"
      style="-fx-background-color: white; -fx-padding: 24;">
    <children>

        <Label fx:id="titleLabel" text="Oceania Quiz">
            <font><Font name="System Bold" size="22"/></font>
        </Label>

        <HBox spacing="16">
            <children>
                <Label text="Score:"/>
                <Label fx:id="scoreLabel" text="0/0" />
            </children>
        </HBox>

        <ImageView fx:id="countryImageView"
                   fitWidth="420" fitHeight="260" preserveRatio="true"
                   style="-fx-background-color:#f3f4f6; -fx-padding:6; -fx-background-radius:8;"/>

        <Label text="Which country is this?" style="-fx-font-size:16;"/>

        <TextField fx:id="answerField" promptText="Type country name..." prefWidth="360"/>

        <HBox spacing="10">
            <children>
                <Button text="Submit" onAction="#handleSubmit" />
                <Button text="Next" onAction="#handleNext" />
                <Button text="Back" onAction="#handleBack"/>
            </children>
        </HBox>

        <Label fx:id="feedbackLabel" style="-fx-font-size:14; -fx-text-fill:#444;" />

        <Button onAction="#backToGameModes" style="-fx-background-color: #60a5fa; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 25; -fx-padding: 10 15;
                               -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);"
                text="⬅️ Back" />
    </children>
</VBox>
