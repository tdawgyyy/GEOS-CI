<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<!--Confirming access to DB (Dummy test page)-->
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.geoquestkidsexplorer.controllers.TestPageControllerDraft"
      prefHeight="400.0" prefWidth="600.0"
      style="-fx -background-color: white;">
    <children>
        <Label fx:id="regionLabel" text="Let's test your knowledge on..." style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        <Label text="What Country is this?" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        <!--Display image of country here-->
        <ImageView fx:id="countryImageView"
                   fitWidth="420" fitHeight="260" preserveRatio="true"
                   style="-fx-background-color:#f3f4f6; -fx-padding:6; -fx-background-radius:8;"/>
        <HBox spacing="20" alignment="CENTER">
            <Button text="Option1" onAction="#CheckAnswer" style="-fx-background-color: #ffcdd2; -fx-background-radius: 10; -fx-padding: 12; -fx-text-fill: #000000; -fx-font-size: 14px; -fx-font-weight: bold;"   />

            <Button text="Option2" onAction="#CheckAnswer" style="-fx-background-color: #ffcdd2; -fx-background-radius: 10; -fx-padding: 12; -fx-text-fill: #000000; -fx-font-size: 14px; -fx-font-weight: bold;"/>

        </HBox>
        <HBox spacing="20" alignment="CENTER">
            <Button text="Option3" onAction="#CheckAnswer" style="-fx-background-color: #ffcdd2; -fx-background-radius: 10; -fx-padding: 12; -fx-text-fill: #000000; -fx-font-size: 14px; -fx-font-weight: bold;"   />

            <Button text="Option4" onAction="#CheckAnswer" style="-fx-background-color: #ffcdd2; -fx-background-radius: 10; -fx-padding: 12; -fx-text-fill: #000000; -fx-font-size: 14px; -fx-font-weight: bold;"/>

        </HBox>
<!--        <TextField fx:id="userInputField" promptText="Enter your answer here" prefWidth="50" prefHeight="30" />-->

    </children>
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <!--Display list of options here-->
    <Button text="Submit Answer!" style="-fx-background-color: #ffcdd2; -fx-background-radius: 10; -fx-padding: 12; -fx-text-fill: #000000; -fx-font-size: 14px; -fx-font-weight: bold;"   />

    <Button text="Back to Home" onAction="#handleBackToHome" style="-fx-background-color: #ffcdd2; -fx-background-radius: 10; -fx-padding: 12; -fx-text-fill: #000000; -fx-font-size: 14px; -fx-font-weight: bold;"/>


</VBox>


